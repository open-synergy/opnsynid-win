<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="stock_picking_template">
        <receipt align='center' width='40' value-thousands-separator=','>
            <div class="pos-center-align" bold="on">
                <h3>
                    ** PICKING LIST **
                </h3>
            </div>
            <br/> 
            <div align="left">
                No. DO: <t t-esc='receipt.no_do'/>
            </div>
            <div align="left">
                No. SO: <t t-esc='receipt.no_so' />
            </div>
            <div align="left">
                Tgl: <t t-esc='receipt.tanggal'/>
            </div>
            <div align="left">
                Toko: <t t-esc='receipt.toko' />
            </div>
            <div>==========================================</div>
            <div>
                <t t-foreach='receipt.line' t-as='line'>
                    <line>
                        <left>
                            <t t-esc='line.product_qty' />
                            <t t-if='line.product_code'>
                                [<t t-esc='line.product_code' />]
                                <t t-esc='line.product_name' />
                            </t>
                            <t t-esc='line.product_uom' />
                        </left>
                    </line>
                </t>
            </div>
        </receipt>
    </t>
</templates>